# ACI Environment Configuration

# Token Cache Settings
# Maximum number of federated tokens to cache (default: 100)
# Prevents memory leaks in enterprise environments with many servers
MAX_TOKEN_CACHE=100

# Context System Settings  
# Enable atomic contexts instead of monolithic navigation context (default: false)
# Reduces React re-renders and improves performance
USE_ATOMIC_CONTEXTS=false

# Development Settings
NODE_ENV=development

# Federation Settings (optional)
# Enable federated authentication for Portal-to-Server token exchange
ARCGIS_FEDERATION_ENABLED=true

# Database Settings
# Location for SQLite audit database (default: ~/.aci/aci.db)
ACI_DB_PATH=~/.aci/aci.db

# Logging Settings
# Enable debug logging (default: false)
DEBUG=false

# Performance Settings
# Maximum items to fetch per API request (default: 1000)
MAX_ITEMS_PER_REQUEST=1000

# Network Settings
# Timeout for API requests in milliseconds (default: 30000)
API_TIMEOUT=30000

# TLS Settings
# Path to custom CA certificates for enterprise environments
# NODE_EXTRA_CA_CERTS=/path/to/ca-certificates.pem